{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debug with GDB",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["tests/or_xor_conclusion.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "pythonPath": "${config:python.pythonPath}",
            "debuggerRoot": "/usr/bin/gdb", 
            "env": {},
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "your_task_label"
        }
    ]
}

